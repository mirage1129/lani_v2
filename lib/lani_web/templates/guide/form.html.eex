<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="field">
    <p class="control">
      <%= label f, :name, class: "control-label" %>
      <%= text_input f, :name, class: "form-control input" %>
      <%= error_tag f, :name %>
    </p>
  </div>

  <div class="field">
    <p class="control">
      <%= label f, :description, class: "control-label" %>
      <%= textarea f, :description, class: "form-control textarea" %>
      <%= error_tag f, :description %>
    </p>
  </div>

  <div class="field">
    <p class="control">
      <%= label f, :category_id, "Category" %>
      <br>
      <%= select f, :category_id, category_select_options(@categories), class: "select" %>
    </p>
  </div> 

  <div class="field">
    <p class="control">
      <%= label f, :starting_location, class: "control-label" %>
      <%= text_input f, :starting_location, class: "form-control input" %>
      <%= error_tag f, :starting_location %>
    </p>
  </div>

  <div class="field">
    <p class="control">
      <%= label f, :image_url, class: "control-label" %>
      <%= text_input f, :image_url, class: "form-control input" %>
      <%= error_tag f, :image_url %>
    </p>
  </div>

  <div class="field">
    <p class="control">
      <%= label f, :cost, class: "control-label" %>
      <%= textarea f, :cost, class: "form-control textarea" %>
      <%= error_tag f, :cost %>
    </p>
  </div>

  <div class="field">
    <p class="control">
      <%= label f, :bring, class: "control-label" %>
      <%= textarea f, :bring, class: "form-control textarea" %>
      <%= error_tag f, :bring %>
    </p>
  </div>

  <div class="field">
    <p class="control">
      <%= label f, :intensity, class: "control-label" %>
      <%= textarea f, :intensity, class: "form-control textarea" %>
      <%= error_tag f, :intensity %>
    </p>
  </div>

  <div class="field">
    <p class="control">
      <%= label f, :map_link, class: "control-label" %>
      <%= text_input f, :map_link, class: "form-control input" %>
      <%= error_tag f, :map_link %>
    </p>
  </div>

  <div class="form-group">
    <p class="control">
      <button class="button is-primary">
        Boom
      </button>
    </p>
  </div>
  
<% end %>
